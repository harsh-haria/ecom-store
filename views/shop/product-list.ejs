<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="grid">
        <% if(prods.length > 0){ %>
            <% for(let products of prods){ %>
                <div>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%=products.title%></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= products.ImageUrl %>" alt="<%=products.title%>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">&#8377 <%=products.price%></h2>
                            <p class="product__description"><%= products.details %></p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                </div>
            <% } %>
        <% } else {%>
            <h1>No products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>