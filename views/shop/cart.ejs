<%- include('../includes/head.ejs',{pageTitle:pageTitle})%>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <% if(prods.length>0){%>
    <ul>
        <%for(let p of prods){%>
        <li>
            Product: <%= p.productData.title %> <br>
            Price: <%= p.productData.price %> <br>
            Quantity: <%= p.quantity %>
            <div>
                <form action="/delete-item-cart" method="post">
                    <input type="hidden" name="productId" value ="<%=p.productData.id%>">
                    <button type="submit" class="btn">Delete</button>
                </form>
            </div>
        </li>
        <br>
        <% } %>
    </ul>
    <% } else{ %>
        <h1>Cart Empty! Continue Shopping</h1>
    <% } %>
<%- include('../includes/end.ejs') %>